// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "autosave": "off",
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "glsl": true
  },
  "current_line_highlight": "all",
  "cursor_blink": false,
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 5,
    "inline_blame": { "enabled": false }
  },
  "scrollbar": {
    "show": "always",
    "git_diff": false,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 12,
    "auto_reveal_entries": false,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": null
    },
    "indent_guides": {
      "show": "always"
    }
  },
  "tabs": { "activate_on_close": "neighbour", "file_icons": true },
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "base_keymap": "Atom"
}
